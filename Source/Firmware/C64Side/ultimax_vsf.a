* = $ff00
    SEI
    LDA #$30
    STA $01     ; full access to RAM (unless in Ultimax Mode!)
    LDA #$2F
    STA $00     ; 

    .fill $fffc - *, $EA

* = $FFFC
     .byte $00, $ff     ; reset routine, CPU jumps to this address after cold boot
     .byte $00
     .byte $00


